extends layout

block content
    .container
        h1.display-3.text-center Contact Us
        p.lead.text-center Be in touch with us over email and website.

        br
        form(method='post', action='contact/send')
            h1 Put your message here!
            .form-group
                label(for="name") Name
                input.form-control(type="text", name='name', placeholder='Enter your name')
            .form-group
                label(for="email") Email
                input.form-control(type="email", name='email', placeholder='Enter your email')
            .form-group
                label(for="message") Message
                textarea.form-control(name="message", placeholder='Enter your message here...')
            button.btn.btn-primary(type='submit') Send Message
            
    br